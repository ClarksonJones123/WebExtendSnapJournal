{
  "manifest_version": 3,
  "name": "Screenshot Annotator",
  "version": "1.0",
  "description": "Capture webpage screenshots and add precise text annotations with memory optimization",
  "permissions": [
    "activeTab",
    "storage",
    "desktopCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot Annotator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["annotation-overlay.html"],
      "matches": ["<all_urls>"]
    }
  ]
}